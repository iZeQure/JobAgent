@page "/admin/settings/companies"

@attribute [Authorize]

<div class="d-flex">
    <PageDisplayName DisplayName="Administrer Virksomheder" />
    <div class="d-inline-block">
        <a class="btn btn-sm btn-info cursor-pointer text-white" data-toggle="modal" data-target="#companyModalCreateNew">
            Opret ny Virksomhed
        </a>
    </div>
</div>

@if (Companies.Count == 0)
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">System Besked!</h4>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>

        <p>Fejl i Database.</p>
        <hr>
        <p>Der blev desværre ikke fundet nogen virksomheder i databasen.</p>
        <p class="mb-0">Genindlæs siden eller prøv igen senere..</p>
    </div>
}
else
{
    <div class="table-responsive table-responsive-sm table-responsive-md">
        <table class="table table-sm table-striped table-hover">
            <caption>Liste over virksomheders kontrakter..</caption>
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Virksomhedens CVR</th>
                    <th scope="col">Navn</th>
                    <th scope="col">Link til Virksomhed</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var company in Companies)
                {
                    <tr id="@(company.Id)">
                        <th scope="row">@(company.Id)</th>
                        <td>@(company.CVR)</td>
                        <td>@(company.Name)</td>
                        <td>@(company.URL)</td>
                        <td>
                            <span @onclick="(OnClickEvent => OnClick_EditCompanyById(company.Id))" data-toggle="modal" data-target="#companyDetailsModal">
                                <Popover Title="Ændre information" Body="Ved denne funktion, kan du ændre informationen på denne virksomehd." Color="Popover.PopoverType.Info" />
                            </span>
                        </td>
                        <td>
                            <span @onclick="(OnClickEvent => StoreCompanyId(company.Id))" data-toggle="modal" data-target="#removeCompanyModal">
                                <Popover Title="Forsigtig!" Body="Denne knap sletter det valgte opslag, forevigt!" Color="Popover.PopoverType.Danger" />
                            </span>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}

@* Company Details Modal *@
<div class="modal fade" id="companyDetailsModal" tabindex="-1" role="dialog" aria-labelledby="companyDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <EditForm Model="CompanyDetails" OnValidSubmit="OnValidSubmit_UpdateCompany">

                <div class="modal-header">
                    <h5 class="modal-title">Virksommhedens Information :</h5>
                </div>

                @if (!string.IsNullOrEmpty(SystemMessage))
                {
                    <div class="container-fluid">
                        <div class="alert alert-info">
                            <div class="d-flex align-items-center">

                                <span>@SystemMessage</span>

                                @if (IsProcessing)
                                {
                                    <div class="spinner-border ml-auto" role="status" aria-hidden="true"></div>
                                }
                                else if (!IsProcessing && IsSuccess)
                                {
                                    <div class="ml-auto"><i class="fas fa-check"></i></div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <label for="inputCompanyIdentity" class="admin-label col-form-label col-form-label-sm">Virksomhedens CVR : <span class="font-italic small" style="color: lightcoral;">*Ændring af CVR kan muligvis skabe problemer.</span></label>
                            <input id="inputCompanyIdentity" type="text" class="form-control form-control-sm" placeholder="Indtast CVR nr." @bind-value="CompanyDetails.CVR" />
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col">
                            <label for="inputName" class="admin-label col-form-label col-form-label-sm">Virksomhedens Navn :</label>
                            <input id="inputName" type="text" class="form-control form-control-sm" placeholder="Indtast virksomhedens navn.." @bind="CompanyDetails.Name" />
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col">
                            <label for="inputCompanyUrl" class="admin-label col-form-label col-form-label-sm">Link til Virksomhedens hjemmeside :</label>
                            <input id="inputCompanyUrl" type="text" class="form-control form-control-sm" placeholder="Indtast link til virksomhedens hjemmeside.." @bind-value="CompanyDetails.URL" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuller</button>
                    <button class="btn btn-info text-light cursor-pointer" type="submit" disabled="@IsProcessing">Gem ændringer</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@* Company Remove Confirmation Modal *@
<div class="modal fade" id="removeCompanyModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Er du sikker på du vil slette dette opslag?</h5>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal" @onclick="@(() => OnClick_CancelRemove(true))">Annuller</button>
                <button type="button" class="btn btn-danger" @onclick="@(() => OnClick_RemoveCompanyById(true, RemoveCompanyConfirmationId))">Slet Virksomhed</button>
            </div>
        </div>
    </div>
</div>

@* Company Create New Modal *@
<div class="modal fade" id="companyModalCreateNew" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">

            <EditForm Model="CompanyModel" OnValidSubmit="OnValidSubmit_CreateCompany">

                <div class="modal-header">
                    <h5 class="modal-title">Opret ny Virksomhed</h5>
                </div>

                @if (!string.IsNullOrEmpty(SystemMessage))
                {
                    <div class="container-fluid">
                        <div class="alert alert-info">
                            <div class="d-flex align-items-center">

                                <span>@SystemMessage</span>

                                @if (IsProcessing)
                                {
                                    <div class="spinner-border ml-auto" role="status" aria-hidden="true"></div>
                                }
                                else if (!IsProcessing && IsSuccess)
                                {
                                    <div class="ml-auto"><i class="fas fa-check"></i></div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <div class="modal-body">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="row">
                        <div class="col">
                            <label for="regInputCompanyIdentity" class="admin-label col-form-label col-form-label-sm">Virksomhedens CVR : <span class="font-italic small" style="color: lightcoral;">*Ændring af CVR efter oprettelse kan muligvis skabe problemer.</span></label>
                            <input id="regInputCompanyIdentity" type="number" class="form-control form-control-sm" placeholder="Indtast CVR nr." @bind="CompanyModel.CVR" />
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col">
                            <label for="regInputName" class="admin-label col-form-label col-form-label-sm">Virksomhedens Navn :</label>
                            <input id="regInputName" type="text" class="form-control form-control-sm" placeholder="Indtast virksomhedens navn.." @bind="CompanyModel.Name" />
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col">
                            <label for="regInputCompanyUrl" class="admin-label col-form-label col-form-label-sm">Link til Virksomhedens hjemmeside :</label>
                            <input id="regInputCompanyUrl" type="text" class="form-control form-control-sm" placeholder="Indtast link til virksomhedens hjemmeside.." @bind="CompanyModel.URL" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Annuller</button>
                    <button type="submit" class="btn btn-info" disabled="@IsProcessing">Opret Virksomhed</button>
                </div>

            </EditForm>

        </div>
    </div>
</div>

@code {
    [Inject]
    protected DataService DataService { get; set; }

    [Inject]
    protected AdminService AdminService { get; set; }

    [Inject]
    protected IJSRuntime JSRuntime { get; set; }

    public List<Company> Companies { get; set; } = new List<Company>();
    public Company CompanyDetails { get; set; } = new Company();
    public CompanyModel CompanyModel { get; set; } = new CompanyModel();

    public int RemoveCompanyConfirmationId { get; set; }
    public string SystemMessage { get; set; } = string.Empty;
    public bool IsProcessing { get; set; } = false;
    public bool IsSuccess { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Companies = await DataService.GetAllCompanies();
    }

    private async void OnClick_EditCompanyById(int id)
    {
        CompanyDetails = await DataService.GetCompanyById(id);
    }

    private async void OnValidSubmit_UpdateCompany()
    {
        IsSuccess = false;
        IsProcessing = true;
        SystemMessage = "Vent venligst..";

        AdminService.UpdateCompany(CompanyDetails);

        IsSuccess = true;
        IsProcessing = false;
        SystemMessage = "Virksomhed blev opdateret!";

        SystemMessage = string.Empty;

        Companies = await DataService.GetAllCompanies();

        await JSRuntime.InvokeVoidAsync("ToggleUpdateCompanyModal");
        await JSRuntime.InvokeVoidAsync("OnInformationChangeAnimation", $"{CompanyDetails.Id}");
    }

    private async void OnValidSubmit_CreateCompany()
    {
        IsSuccess = false;
        IsProcessing = true;
        SystemMessage = "Vent venligst..";

        AdminService.CreateCompany(CompanyModel);

        IsSuccess = true;
        IsProcessing = false;
        SystemMessage = "Virksomhed blev oprettet!";

        SystemMessage = string.Empty;

        Companies = await DataService.GetAllCompanies();

        await JSRuntime.InvokeVoidAsync("ToggleCreateCompanyModal");
    }

    private async void OnClick_RemoveCompanyById(bool confirmation, int id)
    {
        if (confirmation)
        {
            if (id != 0)
            {
                await JSRuntime.InvokeVoidAsync("ToggleRemoveCompanyConfirmationModal");

                AdminService.RemoveCompanyById(id);

                await InvokeAsync(async () =>
                {
                    Companies = await DataService.GetAllCompanies();

                    StateHasChanged();
                });
            }
        }

        RemoveCompanyConfirmationId = 0;
        await Task.FromResult(confirmation);
    }

    private void OnClick_CancelRemove(bool cancelation)
    {
        if (cancelation)
            JSRuntime.InvokeVoidAsync("ToggleRemoveCompanyConfirmationModal");

        RemoveCompanyConfirmationId = 0;
    }

    private void StoreCompanyId(int id)
    {
        RemoveCompanyConfirmationId = id;
    }
}
