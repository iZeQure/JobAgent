@page "/admin/system/settings/view-Dblog"
@attribute [Authorize(Roles = "Udvikler")]
@using BlazorWebsite.Shared.Components.Modals.DbLogModals;

<PageDocumentTitle DocumentTitle="JobAgent - System Logs" />

<div class="d-flex">
    <PageHeadingTitle DisplayTitle="Database Logs" />
    <div class="d-inline-block">

        @if (_logs == null)
        {
            <a class="btn btn-sm btn-info cursor-pointer text-white no-gutters disabled">
                <span class="d-inline-block">Ikke Aktiveret</span>
            </a>
            <span class="d-inline-block"><small class="text-danger font-weight-bolder">* Opret en Database Log.</small></span>
        }
        else
        {
            <a class="btn btn-sm btn-info cursor-pointer text-white" data-bs-toggle="modal" data-bs-target="#ModalCreateDbLog">
                Opret ny Log
            </a>
        }

    </div>
</div>

@if (dataIsLoading)
{
    <MessageAlert Alert="MessageAlert.AlertType.Info" IsLoading="dataIsLoading" Message="Indlæser robot links.." />
}
else
{
    @if (_logs == null)
    {
        <MessageAlert Alert="MessageAlert.AlertType.Info"
                      Message="Indlæser robot links.." IsLoading="true" />
    }
    else
    {
        @if (!_logs.Any())
        {
            <MessageAlert Alert="MessageAlert.AlertType.Warning"
                          Message="Der blev ikke fundet nogen links."
                          MessageOptional="Opret links, ved at trykke på knappen : Opret nyt Link." />
        }
        else
        {
            <div class="table-responsive table-responsive-sm table-responsive-md">
                <table class="table table-striped table-hover">
                    <caption>Liste over virksomheders kontrakter..</caption>
                    <thead class="table-primary text-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Message</th>
                            <th scope="col">Action</th>
                            <th scope="col">LogSeveriy</th>
                            <th scope="col">CreatedBy</th>
                            <th scope="col">CreatedDateTime</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var log in _logs)
                        {
                            <tr id="@(log.Id)">
                                <th scope="row">@(log.Id)</th>
                                <td>@(log.Message)</td>
                                <td>@(log.Action)</td>
                                <td>@(log.LogSeverity)</td>
                                <td>@(log.CreatedBy)</td>
                                <td>@(log.CreatedDateTime)</td>

                                <td>
                                    <span data-bs-toggle="modal" data-bs-target="#ModalEditDbLog" @onclick="@(mouseEvent => OnClick_EditLink(log.Id))">
                                        <Popover Title="Ændre information" Body="Ved denne funktion, kan du ændre informationen på denne jobside." Color="Popover.PopoverType.Info" />
                                    </span>
                                </td>

                                <td>
                                    <span data-bs-toggle="modal" data-bs-target="#ModalRemoveDbLog" @onclick="@(mouseEvent => ConfirmationWindow(log.Id))">
                                        <Popover Title="Forsigtig!" Body="Denne knap sletter den valgte jobside, forevigt!" Color="Popover.PopoverType.Danger" />
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }

    <CreateDbLogModal />

    <EditDbLogModal Model="_logModel" />

    <RemoveDbLogModal Id="_logId" />

}
