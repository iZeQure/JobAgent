<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <HomePageRedirect />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>
                    <b>404.</b>
                    Det er en fejl.
                </p>

                <p>
                    Den anmodede URL /error blev ikke fundet på denne server. <br />
                    <span class="text-muted">Det er alt vi ved.</span>
                </p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
