<div class="pb-3 pt-3">
    <AuthorizeView>
        <Authorized>
            <h4>Kontrolpanel</h4>
        </Authorized>
        <NotAuthorized>
            <h4>Uddannelser</h4>
        </NotAuthorized>
    </AuthorizeView>
</div>

<AuthorizeView>
